Logged in as <%= @current_user.username %>
<%= form_tag(:controller => 'sessions', :action => 'logout') do %>
   <%= submit_tag("Log Out") %>
<% end %>

<h2>Edit Thread:</h2>
<%= form_with( model: [@user, @resourcethread], local: true) do |form| %>

  <!Error printing>
  <% if @resourcethread.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @resourcethread.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    Title<br>
    <%= form.text_field :title, :value => @resourcethread.title %>
  </p>
  <p>
    Description<br>
    <%= form.text_area :description, :value => @resourcethread.description %>
  </p>
  <p>
    <%= form.submit 'Update' %>
  </p>
<% end %>
<%= link_to 'Back to thread index', user_resource_threads_path(@user.id) %>